# Database Configuration
# Use PostgreSQL URL from Render for production
# Format: postgresql://username:password@hostname:5432/database_name
DATABASE_URL=postgresql://username:password@hostname:5432/database_name

# Email Configuration (Resend)
RESEND_API_KEY=re_your_api_key_here
FROM_EMAIL=noreply@yourdomain.com

# JWT Configuration
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Manufacturer API Configuration
MANUFACTURER_API_BASE_URL=http://127.0.0.1:9337
MANUFACTURER_API_USERNAME=your_integrator_username
MANUFACTURER_API_PASSWORD=your_integrator_password
MANUFACTURER_TOKEN_EXPIRE_HOURS=24

# Server Configuration
HOST=127.0.0.1
PORT=8000
RELOAD=true
